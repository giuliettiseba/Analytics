<UserControl x:Class="Analytics.Client.AnalyticsSettingsPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Analytics.Client"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="A setting: " HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Column="1" x:Name="_aSettingTextBox" Height="23" TextWrapping="Wrap" Text="" Width="100" TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>
