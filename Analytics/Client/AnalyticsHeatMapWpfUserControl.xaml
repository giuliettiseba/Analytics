<platformclient:ViewItemWpfUserControl x:Class="Analytics.Client.AnalyticsHeatMapWpfUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Analytics.Client"
             xmlns:platformclient="clr-namespace:VideoOS.Platform.Client;assembly=VideoOS.Platform"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="_headerGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" x:Name="_headerTextBlock" Margin="0,0,5,0">You are now running:</TextBlock>
            <TextBlock Grid.Column="1" x:Name="_nameTextBlock"/>
        </Grid>
        <DatePicker x:Name="initial" HorizontalAlignment="Left" Margin="115,99,0,0" Grid.Row="1" VerticalAlignment="Top" SelectedDateFormat="Long" Width="228"/>
        <DatePicker x:Name="end" HorizontalAlignment="Left" Margin="116,184,0,0" Grid.Row="1" VerticalAlignment="Top" Width="227"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="72,98,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="72,182,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="157,264,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Seleccionar Camara" HorizontalAlignment="Left" Margin="223,23,0,0" Grid.Row="1" VerticalAlignment="Top" Width="140" Click="Button_Click"/>
        <Label x:Name="CamaraSeleccionada" Content="..." HorizontalAlignment="Left" Height="31" Margin="10,20,0,0" Grid.Row="1" VerticalAlignment="Top" Width="208"/>
    </Grid>
</platformclient:ViewItemWpfUserControl>
